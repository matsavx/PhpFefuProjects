{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {#    <h1>Hello {{ controller_name }}</h1>#}
    <li {{ app.request.get('_route') == 'main_page' ? 'active' }}>
        <a href="{{ path('main_page') }}">Вернуться на главную</a>
    </li>

    {% for roll in rolls %}
        <div>
            <div>
                <h3>{{ roll.rollName }}</h3>
                <div>{{ roll.rollPrice }} руб.</div>
                <div>{{ roll.rollQuantity }} шт.</div>
                <p>{{ roll.rollComposition }}</p>
                <a href="{{ path('rollAdd', {'id':roll.id}) }}">Добавить в корзину</a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
